# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Secret key for Flask sessions (generate a random string for production)
SECRET_KEY=your-secret-key-here

# Database URL (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///instance/ai_assistant.db

# Frontend URL for CORS (your Vercel deployment URL)
FRONTEND_URL=http://localhost:5173

# Claude AI Configuration (Required for AI responses)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Data Source API Keys (Optional - for integrations)
# Weather API
WEATHER_API_KEY=your_weather_api_key

# Email Integration (Gmail API)
GMAIL_CREDENTIALS_PATH=path/to/gmail/credentials.json

# Calendar Integration
CALENDAR_CREDENTIALS_PATH=path/to/calendar/credentials.json

# Other data source configurations
# Add your custom data source API keys here
